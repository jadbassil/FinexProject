<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jb.project">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Finex"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register"
            android:noHistory="true"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".SpendingActivity"
            android:label="Spendings" />
        <activity
            android:name=".SavingsActivity"
            android:label="Savings" />
        <activity
            android:name=".CashTransferActivity"
            android:label="Cash Transfer"
            android:parentActivityName=".SavingsActivity" />
        <activity
            android:name=".SavingAmountActivity"
            android:label="Add Saving Amount"
            android:parentActivityName=".SavingsActivity" />
        <activity
            android:name=".NewObjectiveActivity"
            android:label="Add New Objective"
            android:parentActivityName=".SavingsActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".Expenses"
            android:label="Expenses" />
        <activity
            android:name=".SpendingActivity2"
            android:label="Finex" />
        <activity
            android:name=".AddingAmount"
            android:label="Add New Amount" />
        <activity
            android:name=".BalanceActivity"
            android:label="Balance" />
        <activity
            android:name=".Months"
            android:label="Months" />
        <activity android:name=".Splash"
            android:noHistory="true">
            android:theme="@android:style/SplashTheme>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>