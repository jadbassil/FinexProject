<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    tools:context="com.example.jb.project.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="#efefef"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Total Savings"
            android:layout_centerVertical="true"
            android:id="@+id/total_savings_text"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/total_savings"
            android:layout_toRightOf="@id/total_savings_text"
            android:inputType="number"
            android:focusedByDefault="false"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/about_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:onClick="showSavingsDesc"
            android:id="@+id/infoIcon"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:text="Set total savings"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:onClick="setTotalSavings"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="#efefef"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Total Balance"
            android:layout_centerVertical="true"
            android:id="@+id/balance_txt"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/balance_val"
            android:layout_toRightOf="@id/balance_txt"
            android:inputType="number"
            android:focusedByDefault="false"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/about_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:onClick="showBalanceDesc"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:text="Set total balance"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:onClick="setTotalBalance"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:text="log out"
        android:background="@color/colorPrimary"
        android:onClick="logOut"/>


</LinearLayout>
